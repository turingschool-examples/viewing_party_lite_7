<h1>Top Movies</h1>

<%= button_to "Discover Page", "/users/#{params[:id]}/discover", method: :get %>

<% @facade.discover_search.each do |movie| %>
  <section id="movie-<%= movie.movie_id %>">
    <li><%= link_to "#{movie.title}", "/users/#{params[:id]}/movies/#{movie.movie_id}", method: :get %></li>
    <li><%= "Vote Average: #{movie.average}" %></li>
  </section>
<% end %>
