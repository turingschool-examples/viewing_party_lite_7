<%# limit search results to 20 items %>
<%# button to return to discover %>

<section>
  <% if @top_rated.present? %>
    <% @top_rated.each do |movie| %>
      <%= link_to movie.title, user_movies_path(@user, movie) %>
      <p>Average Rating: <%= movie.vote_avg %><p>
      <br>
    <% end %>
  <% elsif @search_result.present? %>
    <% @search_result.each do |movie| %>
      <%= link_to movie.title, user_movies_path(@user, movie) %>
      <p>Average Rating: <%= movie.vote_avg %><p>
      <br>
    <% end %>
  <% end %>
<section>