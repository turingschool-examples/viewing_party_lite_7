<div class="discover-movies">
<button>
  <%= link_to "Discover Top Rated Movies", user_movies_path(@user, search: "Top Rated"), method: :get %>
</button>

<%= form_with url: "/users/#{@user.id}/movies", method: :get, local: true do |form| %>
  <%= form.label :search, 'Search:' %>
  <%= form.text_field :search %>
  <%= form.submit 'Search' %>
<% end %>