<h1>Discover Movies</h1>

<%= form_with url: user_movies_path, method: :get, data: { turbo: false } do |form| %>
  <%= form.hidden_field :top, value: "top" %>
  <%= form.submit "Top Rated Movies" %>
<% end %>

<%= form_with url: user_movies_path, method: :get, local: true do |form| %>
  <%= form.label :query, 'Search', require: true %>
  <%= form.text_field :query %>
  <%= form.submit 'Search' %>
<% end %>